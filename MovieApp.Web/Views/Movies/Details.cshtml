@model Movie

<div class="card">
    <div class="row">
        <div class="col-md-3">
            <img src="/img/@Model.ImageUrl" class="card-img" alt="@Model.Title" />
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">
                    @Model.Title
                </h5>
                <p class="card-text">Filmin Açıklaması : @Model.Description</p>
                @*<p class="card-text">Filmin Yönetmeni: @Model.Director</p>*@
                @*@if (Model.Actors != null)
                    {
                        <ul class="list-group">
                            @foreach (var actor in Model.Actors)
                            {
                                <li class="list-group-item disabled" aria-disabled="true">@actor</li>

                            }
                        </ul>
                    }*@
                <a asp-controller="movies" asp-action="edit" asp-route-id="@Model.MovieId" class="btn btn-warning mt-2 mb-2">Film Detaylarını Düzenle</a>
                <form asp-controller="movies" asp-action="delete" method="post" style="display:inline;">
                    <input type="hidden" name="MovieId" value="@Model.MovieId" />
                    <input type="hidden" name="Title" value="@Model.Title" />
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>

            </div>
        </div>
    </div>
</div>
@if (TempData["Message"] != null)
{
    @section message{
        @await Html.PartialAsync("_message", (String)TempData["Message"])
    }
}
